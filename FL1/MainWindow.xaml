<Window x:Class="FL1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FL1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Hårt typat programmeringsspråk-->
        <!-- Det betyder bland annat att vi måste kompilera programmet innan det körs-->
        <Button x:Name="btnHello" Content="Button"  Margin="48,28,570,0" VerticalAlignment="Top" Height="99" Click="btnOk_Click"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="326,28,0,0" VerticalAlignment="Top" Height="99" Width="152" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" FontFamily="Algerian" FontSize="48" Click="btnOk_Click"/>

    </Grid>
</Window>
