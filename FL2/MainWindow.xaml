<Window
    x:Class="FL2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FL2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnOk"
            Width="142"
            Height="94"
            Margin="65,91,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnOk_Click"
            Content="Ok" />
        <TextBox
            x:Name="txtName"
            Width="248"
            Height="45"
            Margin="65,29,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            Text="Fyll i ditt namn"
            TextWrapping="Wrap" />
        <Button
            x:Name="button"
            Margin="148,292,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Click"
            Content="Button" />
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Left" Margin="364,179,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="123" Width="300"/>

    </Grid>
</Window>
